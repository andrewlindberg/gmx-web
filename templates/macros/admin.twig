{% macro edit_btn(href) %}
	<a
			href="{{ href }}"
			class="uk-icon-button  uk-margin-small-right"
			data-toggle="tooltip"
			data-placement="top"
			title="{{ trans('buttons', 'edit') }}"
	><i class="fas fa-pen fa-sm"></i></a>
{% endmacro %}

{% macro delete_btn(href) %}
	<form
			action="{{ href }}"
			method="post"
			class="btn-delete"
	>
        {{ csrf_token() }}
		<button
				type="submit"
				class="uk-icon-button  uk-margin-small-right"
				data-toggle="tooltip"
				data-placement="top"
				title="{{ trans('buttons', 'delete') }}"
		><i class="fas fa-trash fa-sm"></i></button>
	</form>
{% endmacro %}
