{% extends 'base.twig' %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Steam ID</th>
            <th>Nickname</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.steamid }}</td>
                <td>{{ player.nick }}</td>
                <td>
                    <a href="{{ path_for('admin_players_edit', {'player': player.id}) }}" class="btn btn-sm">
                        <span class="oi oi-pencil"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ render_pagination(pagination) }}
    <a href="{{ path_for('admin_players_create') }}" class="btn btn-primary">{{ trans('buttons', 'create') }}</a>
{% endblock %}
