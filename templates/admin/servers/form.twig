{% extends 'admin/admin.twig' %}

{% import 'macros/forms.twig' as forms %}

{% block content %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-1@m">
    <form action="{{ form.getAction() }}" method="post">
        {{ csrf_token() }}
		{{ forms.element_input(form.name, true) }}
		{{ forms.element_input(form.ip, true) }}
		{{ forms.element_input(form.port, true) }}
        <div class="form-group">
            {% if create %}
                <input type="submit" class="uk-button uk-button-primary hvr-grow" value="{{ trans('buttons', 'create') }}">
            {% else %}
                <input type="submit" class="uk-button uk-button-primary hvr-grow" value="{{ trans('buttons', 'update') }}">
            {% endif %}
            <a href="{{ path_for('admin_servers_list') }}" class="uk-button uk-button-secondary">{{ trans('buttons', 'cancel') }}</a>
        </div>
    </form>
</div>
{% endblock %}
