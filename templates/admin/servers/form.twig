{% extends 'admin/admin.twig' %}

{% import 'forms.twig' as forms %}

{% block content %}
    <form action="{{ form.getAction() }}" method="post">
        {{ csrf_token() }}
		{{ forms.element_input(form.name) }}
		{{ forms.element_input(form.ip) }}
		{{ forms.element_input(form.port) }}
        <div class="form-group">
            {% if create %}
                <input type="submit" class="btn btn-primary hvr-grow" value="{{ trans('buttons', 'create') }}">
            {% else %}
                <input type="submit" class="btn btn-primary hvr-grow" value="{{ trans('buttons', 'update') }}">
            {% endif %}
            <a href="{{ path_for('admin_servers_list') }}" class="btn btn-secondary hvr-grow">{{ trans('buttons', 'cancel') }}</a>
        </div>
    </form>
{% endblock %}
