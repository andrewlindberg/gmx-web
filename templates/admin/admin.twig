{% extends 'base.twig' %}

{% block style %}
    <style>
        .btn-delete {
            display: inline-block;
        }
    </style>
{% endblock %}

{% block javascript %}
    <script>
        UIkit.util.on('form.btn-delete', 'submit', function (e) {
            e.preventDefault();
            e.target.blur();
            var form = this;
            //alert(form.action);
            UIkit.modal.confirm('{{ trans('labels', 'are_you_sure') }}',
                {
                    labels: {
                        ok: '{{ trans('buttons', 'delete') }}',
                        cancel: '{{ trans('buttons', 'cancel') }}'
                    }
                }).then(function () {
                //console.log('Confirmed.');
                form.submit();
            }, function () {
                //console.log('Rejected.')
            });
        });
    </script>
{% endblock %}

{% block modals %}

{% endblock %}
