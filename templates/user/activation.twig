{% extends 'base.twig' %}

{% block content %}
<form action="{{ form_action(form) }}" method="post">
	{{ csrf_token() }}
    <div class="row">
        <div class="input-field col s12">
            {{ form_label(form, 'email') }}
            {{ form_input(form, 'email') }}
            {{ form_error(form, 'email') }}
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn" value="Activate">
    </div>
</form>
{% endblock %}
