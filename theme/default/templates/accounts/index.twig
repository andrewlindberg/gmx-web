{% extends 'base.twig' %}

{% block style %}
	<link rel="stylesheet" href="{{ base_url() }}/assets/css/tables.css" />
{% endblock %}

{% block content %}
	<div class="uk-card uk-card-default uk-card-body uk-width-1-1@m">
		<h2>Token</h2>
		<p>To connect game accounts, you must copy and enter in the console, while on the server.</p>
		<div class="uk-light uk-background-secondary token">
			<div class="uk-placeholder uk-text-center">
			<b>&nbsp; gmx_assign {{ user.token }}</b>
			</div>
		</div>
	</div>
	<div class="uk-child-width-1-4@s uk-grid-margin-medium" uk-grid>
		{% for player in user.players %}
			<div>
				<div class="uk-card uk-card-default">
					<div class="uk-card-header">
						<div class="uk-grid-small uk-flex-middle" uk-grid>
							<div class="uk-width-expand">
								<h3 class="uk-card-title uk-margin-remove-bottom">
									<a href="{{ path_for(constants.accounts.ROUTE_VIEW, {'player': player.id}) }}">
										{{ player.nick }}
									</a>
								</h3>
								<p class="uk-text-meta uk-margin-remove-top">{{ player.server.name }}</p>
							</div>
						</div>
					</div>
					<div class="uk-card-body">
                        {{ player.steamid }}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
