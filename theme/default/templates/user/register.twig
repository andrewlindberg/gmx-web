{% extends 'base.twig' %}

{% import 'macros/forms.twig' as forms %}

{% block content %}
<div class="uk-flex uk-flex-middle uk-flex-center uk-child-width-1-4" uk-height-viewport="offset-top: true">
    <div class="uk-card uk-card-default uk-width-1-3@m uk-box-shadow-large">
        <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
                <div class="uk-width-auto">
                    <img src="{{ base_url() }}/assets/images/logo.svg" width="100">
                </div>
                <div class="uk-width-expand">
                    <h3 class="uk-card-title main-title uk-margin-remove-bottom">{{ trans('buttons', 'register') }}</h3>
                </div>
            </div>
        </div>
        <div class="uk-card-body">
            <form action="{{ form.getAction() }}" method="post">
                {{ csrf_token() }}
                <div class="uk-margin">
                {{ forms.element_input(form.login) }}
                </div>
                <div class="uk-margin">
                {{ forms.element_input(form.email) }}
                </div>
                <div class="uk-margin">
                {{ forms.element_input(form.password) }}
                </div>
                <div class="uk-margin">
                {{ forms.element_input(form.password_repeat) }}
                </div>
                <div class="uk-margin">
                    <div class="form-group">
                        <input type="submit" class="uk-button uk-button-primary" value="{{ trans('buttons', 'register') }}">
                        <br><br>
                        {# TODO: Translate #}
                        или <a href="{{ path_for('login') }}">{{ trans('buttons', 'login') }}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
