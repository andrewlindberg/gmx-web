{% macro circle_btn(config) %}
    <a
            href="{{ config.href }}"
            class="uk-icon-button uk-margin-small-right {{ config.size }}"
            data-toggle="tooltip"
            data-placement="top"
            title="{{ config.title }}"
            {% for key, value in config.attrs %}
                {{ key }}="{{ value }}"
            {% endfor %}
    ><i class="{{ config.icon }} fa-sm"></i></a>
{% endmacro %}

{% macro form_btn(title, href, class, icon, size = 'm') %}
	<form
			action="{{ href }}"
			method="post"
			class="form-inline {{ class }}"
	>
		{{ csrf_token() }}
		<button
				type="submit"
				class="uk-icon-button uk-margin-small-right {{ size }}"
				data-toggle="tooltip"
				data-placement="top"
				title="{{ title }}"
		><i class="fas fa-sm {{ icon }}"></i></button>
	</form>
{% endmacro %}

{% macro edit_btn(href, size = 'm') %}
    {{ _self.circle_btn({
            "href": href,
            "title": trans('buttons', 'edit'),
            "icon": "fas fa-pen",
