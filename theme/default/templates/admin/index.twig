{% extends 'admin/admin.twig' %}
{% import 'macros/progress.twig' as progress %}

{% block title %}{{ title }} | {{ trans('labels', 'admin_panel') }} | {{ trans('labels', 'index') }}{% endblock %}

{% block content %}
<div class="uk-child-width-1-3@l uk-child-width-1-2@s uk-grid-small uk-grid-match" uk-grid>
	<div>
		<div class="uk-card uk-card-default uk-card-body">
			<h3 class="uk-card-title">
				<a href="{{ path_for(constants.admin.servers.ROUTE_LIST) }}">{{ trans('admin_menu', 'servers') }}</a>
			</h3>
            {{ progress.render(servers.active ~ ' / ' ~ servers.total, servers.active, servers.total, 150) }}
		</div>
	</div>

	<div>
		<div class="uk-card uk-card-default uk-card-body">
			<h3 class="uk-card-title">
				<a href="{{ path_for(constants.admin.users.ROUTE_LIST) }}">{{ trans('admin_menu', 'users') }}</a>
			</h3>
            {{ progress.render(users.new ~ ' / ' ~ users.total, users.new, users.total, 150) }}
		</div>
	</div>

	<div>
		<div class="uk-card uk-card-default uk-card-body">
			<h3 class="uk-card-title">
				<a href="{{ path_for(constants.admin.players.ROUTE_LIST) }}">{{ trans('admin_menu', 'players') }}</a>
			</h3>
			{{ progress.render(players.new ~ ' / ' ~ players.total, players.new, 0, 150) }}
		</div>
	</div>

	<div>
		<div class="uk-card uk-card-default uk-card-body">
			<h3 class="uk-card-title">
				<a href="{{ path_for(constants.admin.preferences.ROUTE_MAIN) }}">{{ trans('admin_menu', 'preferences') }}</a>
			</h3>
		</div>
	</div>

	<div>
		<div class="uk-card uk-card-default uk-card-body">
			<h3 class="uk-card-title">
				<a href="{{ path_for(constants.admin.roles.ROUTE_LIST) }}">{{ trans('admin_menu', 'roles') }}</a>
			</h3>
		</div>
	</div>
</div>
{% endblock %}
