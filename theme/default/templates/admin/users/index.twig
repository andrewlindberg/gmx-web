{% extends 'admin/admin.twig' %}

{% import 'macros/admin.twig' as admin %}
{% import 'macros/paginator.twig' as paginator %}

{% block style %}
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/tables.css" />
{% endblock %}

{% block content %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-1@m">
    {% set hasPermissionsForView = has_access_permission(
        constants.admin.users.PERMISSION_GROUP,
        constants.admin.users.PERMISSION_KEY,
        premissions.ACCESS_VIEW
    ) %}
    <style>
        .user-avatar-cell {
            width: 30px;
        }
    </style>
    <div f-table f-divider>
        <ul th>
            <li class="user-avatar-cell"></li>
            <li class="uk-width-1-4@m uk-width-2-4@s uk-visible@s">{{ trans('admin_users', 'login') }}</li>
            <li class="uk-width-1-4@m uk-width-1-4@s uk-visible@s">{{ trans('admin_users', 'email') }}</li>
            <li class="uk-width-1-4@m uk-width-1-4@s uk-visible@s">{{ trans('admin_users', 'status') }}</li>
            <li class="uk-width-1-6@m uk-visible@m"></li>
        </ul>
        {% for user in users %}
        <ul>
            <li class="user-avatar-cell">
                <div>
                    <img class="uk-border-circle" width="30" src="{{ upload_url(user.avatar) }}">
                </div>
            </li>
            <li class="uk-width-1-4@m uk-width-2-4@s">
                {% if hasPermissionsForView %}
                    <a href="{{ path_for(constants.admin.users.ROUTE_VIEW, {'user': user.id}) }}">{{ user.login }}</a>
                {% else %}
                    {{ user.login }}
                {% endif %}
            </li>
            <li class="uk-width-1-4@m uk-width-1-4@s">{{ user.email }}</li>
            <li class="uk-width-1-4@m uk-width-1-4@s">
                {% if user.status == 'pending' %}
                    PENDING
                {% elseif user.status == 'active' %}
                    Active
                {% else %}
                    BANNED
                {% endif %}
            </li>
            {% if has_access_permission(
                constants.admin.users.PERMISSION_GROUP,
                constants.admin.users.PERMISSION_KEY,
                premissions.ACCESS_EDIT
            ) %}
                <li class="uk-width-1-6@m">
                    {{ admin.edit_btn(path_for(constants.admin.users.ROUTE_EDIT, {'user': user.id})) }}
                </li>
            {% endif %}
        </ul>
        {% endfor %}
    </div>
	{{ paginator.render(pagination) }}
</div>
{% endblock %}
